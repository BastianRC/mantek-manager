# Etapa de build
FROM node:18-alpine AS builder

# Aumentar el l√≠mite de memoria para Node.js durante el build
ENV NODE_OPTIONS="--max-old-space-size=2048"

WORKDIR /app
COPY . .

# üîß Generar .env antes del build
RUN echo "NUXT_PUBLIC_LARAVEL_API_URL=http://localhost:8000/api" > .env

RUN npm install
RUN npm run build

# Etapa de ejecuci√≥n
FROM node:18-alpine

WORKDIR /app
COPY --from=builder /app ./

EXPOSE 3000
CMD ["node", ".output/server/index.mjs"]
